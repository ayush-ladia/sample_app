<% provide(:title, @user.name) %>

<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <div>
      <h4>
      	Cash available :$<%= @user.cash_in_hand %>
      </h4>
    </div>
    </section>
  </aside>

  <div>
    </div>
      <table class = "table table-striped table-bordered table-condensed table-hover">
        <th>
          <td>In hand</td>
          <td>current rate</td>
          <td>total current worth</td>
        </th>
      <% @my_stocks.each do |s| %>
              <tr>
                <% rate = YahooFinance.quotes([s.symbol], [:ask_real_time])[0].ask_real_time %>
                <td><%= s.symbol  %></td>
                <td><%= s.quantity  %></td>
                <td><%= rate  %></td>
                <td><%= rate.to_f * s.quantity  %></td>
                <td> <% @transaction = current_user.transactions.build %>
                      <%= form_for(@transaction) do |f| %>
                      <%= f.hidden_field :symbol, :value => s.symbol %>
                      <%= f.hidden_field :action, :value => "sell" %>
                      <%= f.hidden_field :rate, :value => rate %>
                      <%= f.submit "sell", class: "btn  btn-primary" %>
                      <% end %>
            </tr>
      <% end %>
      </table>
    </div>
  </div>

</div>
